<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Branda"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/image_login"
        android:layout_width="152dp"
        android:layout_height="97dp"
        android:layout_marginTop="45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backround_branda"
        android:layout_width="436dp"
        android:layout_height="211dp"
        android:layout_marginTop="152dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dzikrow"/>

    <Button
        android:id="@+id/button_branda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_branda"
        android:drawableRight="@drawable/baseline_keyboard_double_arrow_right_24"
        android:hint="Bagikan"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/btn_fragment"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="20sp"
        android:background="@drawable/button_background"
        android:text="Equipper"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

</FrameLayout>